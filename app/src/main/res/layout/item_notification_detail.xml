<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_notif_detail_product_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:theme="@style/ShapeAppearanceOverlay.App.CornerSize12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_notif_detail_product_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Penawaran produk"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/iv_notif_detail_product_image"
        app:layout_constraintTop_toTopOf="@+id/iv_notif_detail_product_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_notif_detail_product_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="20 Apr, 14:04"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_notif_detail_product_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_notif_detail_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Jam Tangan Casio"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/iv_notif_detail_product_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_notif_detail_product_status" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_notif_detail_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Rp250.000"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/iv_notif_detail_product_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_notif_detail_product_name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_notif_detail_product_bid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Ditawar Rp200.000"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/iv_notif_detail_product_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_notif_detail_product_price" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_notif_detail_tolak"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="50dp"
        android:text="Tolak"
        android:textColor="@color/colorPrimary"
        app:backgroundTint="@color/white"
        app:cornerRadius="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_notif_detail_product_bid"
        app:strokeColor="@color/colorPrimary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_notif_detail_terima"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="4dp"
        android:text="Terima"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_notif_detail_tolak"
        app:layout_constraintTop_toTopOf="@+id/tv_notif_detail_product_bid" />
</androidx.constraintlayout.widget.ConstraintLayout>